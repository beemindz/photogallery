<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
      <item name="actionBarStyle">@style/MyActionBar</item>

      <!--<item name="actionMenuTextAppearance">@style/MyActionBar.MenuTextStyle</item>-->
      <item name="actionOverflowButtonStyle">@style/MyActionBar.OverFlow</item>
      <item name="android:textColor">@color/text_color</item>

    </style>

  <!-- ActionBar styles -->
  <style name="MyActionBar" parent="Widget.AppCompat.Light.ActionBar">
    <!-- Support library compatibility -->
    <item name="background">@android:color/white</item>
  </style>

  <style name="MyActionBar.OverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
    <item name="android:src">@drawable/icon_sort</item>
  </style>

</resources>
